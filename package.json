{
  "name": "unbeadable.",
  "version": "1.0.1",
  "description": "",
  "scripts": {
    "build": "parcel build src/ts/main.ts -d build/dist/ -o main.js && parcel build src/ts/searchResults.ts -d build/dist/ -o searchResults.js",
    "watch": "parcel watch src/ts/main.ts -d build/dist/ -o main.js && parcel build src/ts/searchResults.ts -d build/dist/ -o searchResults.js",
    "test": "jest",
    "tdd": "jest --watch",
    "lint": "tslint --project tsconfig.json --config tslint.json",
    "pretty": "prettier --write 'src/ts/**/*.ts'"
  },
  "author": "unbeadables.",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "~23.3.1",
    "jest": "~23.5.0",
    "parcel-bundler": "~1.9.7",
    "prettier": "1.14.2",
    "ts-jest": "~23.1.4",
    "tslint": "~5.11.0",
    "typescript": "~3.0.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ],
    "testPathIgnorePatterns": [
      "build/*/*.+(ts|tsx|js)"
    ]
  }
}
